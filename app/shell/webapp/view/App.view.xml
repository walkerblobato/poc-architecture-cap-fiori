<mvc:View
  controllerName="shell.controller.App"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:tnt="sap.tnt"
  displayBlock="true"
  height="100%">
  <tnt:ToolPage id="toolPage">
    <tnt:header>
      <tnt:ToolHeader>
        <Button
          id="sideNavigationToggleButton"
          icon="sap-icon://menu2"
          type="Transparent"
          press="onSideNavButtonPress"/>
        <tnt:ToolHeaderUtilitySeparator/>
        <Title text="Clean Core as a Service" level="H4"/>
        <ToolbarSpacer/>
        <Button icon="sap-icon://action-settings" type="Transparent" tooltip="Settings"/>
        <Button icon="sap-icon://bell" type="Transparent" tooltip="Notifications"/>
        <Avatar initials="VO" tooltip="User Profile" displaySize="XS" class="avatarWithMargin" press="onAvatarPress" />
      </tnt:ToolHeader>
    </tnt:header>
    <tnt:sideContent>
      <tnt:SideNavigation
        id="sideNavigation"
        expanded="false"
        selectedKey="home">
        <tnt:NavigationList
          id="navigationList"
          itemSelect="onItemSelect">
          <tnt:NavigationListItem
            text="Home"
            icon="sap-icon://home"
            key="home"/>
          <tnt:NavigationListItem 
            text="Control Tower" 
            expanded="true">
            <tnt:NavigationListItem 
              text="Compliance Radar" 
              key="compliance-radar" 
              icon="sap-icon://pie-chart" />
            <tnt:NavigationListItem 
              text="Clean Core KPIs" 
              key="clean-core-kpis" 
              icon="sap-icon://performance" />
          </tnt:NavigationListItem>
        </tnt:NavigationList>
      </tnt:SideNavigation>
    </tnt:sideContent>
    <tnt:mainContents>
      <NavContainer id="navContainer" height="100%" autoFocus="false">
        <!-- Apps will be loaded here dynamically -->
      </NavContainer>
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>
