<mvc:View
  controllerName="app001home.controller.Main"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:html="http://www.w3.org/1999/xhtml"
  height="100%">

  <Page showHeader="false" class="homePage">
    <content>
      <!-- Header with connection status -->
      <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginTop sapUiSmallMarginEnd sapUiSmallMarginBegin">
        <Title text="My Home" level="H5" class="sapUiTinyMarginTop"/>
        <HBox alignItems="Center">
          <core:Icon src="sap-icon://connected" color="#2da552" size="0.75rem" class="sapUiTinyMarginEnd"/>
          <Text text="{home>/connectionStatus}" class="sapUiTinyMarginTop"/>
        </HBox>
      </HBox>

      <!-- Main Banner with HTML -->
      <VBox class="sapUiMediumMargin">
        <core:HTML content="{home>/bannerHTML}"/>
      </VBox>

      <!-- Additional content can go here -->
    </content>
  </Page>

</mvc:View>
